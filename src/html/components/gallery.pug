mixin gallery(cl, title)
	section.cc-gallery.cc-outer(class= cl)
		._wrapper.cc-wrapper
			if title
				._title-container
					h2._title.cc-heading-2 ГАЛЕРЕЯ

				- var n = 1;
				._slider-container
					._slider.js-cc-gallery-page-slider.js-cc-gallery-single-mode
						._grid.swiper-wrapper
							while n < 9
								._item.swiper-slide.js-cc-gallery-item
									._image-container
										img._image(src='../images/gallery-' + n + '.jpg', alt='#', loading='lazy')
										img._image.-full.js-cc-gallery-item-full-image(src='../images/gallery-' + n + '.jpg', alt='#', loading='lazy')
								- n ++;

